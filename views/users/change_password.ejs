<% layout('layouts/generic') %>
<div class="col-6 offset-3">
  <form class="row g-3 validate-form" action="/change_password" method="POST">
    <h1>Change Password</h1>
    <div class="col-md-12">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="user[password]">
    </div>
    <div class="col-md-12">
      <label for="conf-password" class="form-label">Confirm Password</label>
      <input type="password" class="form-control" id="password" name="user[conf-password]">
    </div>
    <div class="col-12">
      <button class="btn btn-primary">Confirm</button>
    </div>
  </form> 
</div>




